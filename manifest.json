{
    "manifest_version":3,
    "name":"Opaque",
    "version":"1.0",
    "description":"A Chrome extension to read, save and listen to Medium blogs",
    "permissions": [
      "activeTab",
      "storage",
      "downloads",
      "scripting"
    ],
    "host_permissions": [
      "https://medium.com/*"
    ],
    "action":{
        "default_popup":"ext.html",
        "default_icon":{
            "48":"icons/icon48.png"
        }
    },
    "background":{
        "service_worker":"background.js"
    },
    "content_scripts":[
        {
            "matches":["https://medium.com/*"],
            "js":["content.js"]
        }
    ],
    "web_accessible_resources": [
    {
      "resources": ["utils/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
  